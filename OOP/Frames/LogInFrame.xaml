<Page x:Class="OOP.Frames.LogInFrame"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:local="clr-namespace:OOP.Frames"
      mc:Ignorable="d" 
      d:DesignHeight="470" d:DesignWidth="400"
      Title="LogInFrame" >

    <StackPanel Orientation="Vertical">


        <TextBlock Height="30"  FontSize="20" FontWeight="Bold" Foreground="White"  HorizontalAlignment="Center"  Margin="0 30 0 30"  >Login</TextBlock>
        <TextBox Height="50" Foreground="White"  FontSize="20"  Margin="50 0 50 30" materialDesign:HintAssist.Hint="Login" Style="{StaticResource MaterialDesignFloatingHintTextBox}"/>
        <TextBlock Height="30" HorizontalAlignment="Center" Foreground="White" FontWeight="Bold" FontSize="20" Margin="0 0 0 30">Password</TextBlock>
        <PasswordBox Height="50" Foreground="White" FontSize="20" Margin="50,0,50,60"  materialDesign:HintAssist.Hint="Password" Style="{StaticResource MaterialDesignFloatingHintPasswordBox}"/>
        <Button Width="100" Background="#005763" Click="Button_Click" Content="Sign in" Margin="150,0,150,0"/>

    </StackPanel>
</Page>
