<Page x:Class="OOP.MainFrame"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:OOP"
      mc:Ignorable="d" 
      d:DesignHeight="539" d:DesignWidth="956" Background="Black"
      Title="MainFrame" Loaded="Page_Loaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>
        <DataGrid
  Margin="0,8,0,0" Name="Users"
  ItemsSource="{Binding Items3}"
  CanUserSortColumns="True" 
   />
        <Button Content="Button" HorizontalAlignment="Left" Margin="100,5,0,0" Grid.Row="1" VerticalAlignment="Top" Width="75" />
    </Grid>
</Page>
